{
  "name": "zod-to-drizzle",
  "version": "0.1.0",
  "description": "Create Drizzle ORM tables from Zod schemas",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "build": "tsup",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "drizzle",
    "zod",
    "schema",
    "orm",
    "typescript",
    "sqlite",
    "postgres",
    "mysql"
  ],
  "author": "bil0ak <contact@bilalakkil.com> (https://github.com/bil0ak)",
  "repository": "https://github.com/bil0ak/zod-to-drizzle",
  "homepage": "https://github.com/bil0ak/zod-to-drizzle",
  "license": "Apache-2.0",
  "dependencies": {
    "drizzle-orm": "^0.36.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.9.0",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": "22.11.0"
  }
}
