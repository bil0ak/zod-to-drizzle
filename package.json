{
  "name": "zod-to-drizzle",
  "version": "0.0.1",
  "description": "Create Drizzle ORM tables from Zod schemas",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "test": "bun test",
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "build:all": "bun run build && bun run build:types",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "drizzle",
    "zod",
    "schema",
    "orm",
    "typescript",
    "sqlite",
    "postgres",
    "mysql"
  ],
  "author": "bil0ak",
  "license": "MIT",
  "dependencies": {
    "drizzle-orm": "^0.36.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "typescript": "^5.6.3",
    "@types/bun": "latest"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": "22.11.0"
  }
}
